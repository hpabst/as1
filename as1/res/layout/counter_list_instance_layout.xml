<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    <TextView
        android:id="@+id/counterInstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="24sp"
        android:text="@string/defaultName"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/counterInstCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/counterInstName"
        android:layout_alignBottom="@+id/counterInstName"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/counterInstName"
        android:textSize="18sp"
        android:text="@string/defaultCount"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
